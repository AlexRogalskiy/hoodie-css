{
  "name": "hoodie-website",
  "version": "0.1.0",
  "devDependencies": {
    "autoprefixer": "^6.0.2",
    "http-server": "^0.8.0",
    "live-reload": "^1.1.0",
    "node-sass": "^3.3.2",
    "opener": "^1.4.1",
    "parallelshell": "^2.0.0",
    "postcss": "^5.0.4",
    "postcss-cli": "^2.1.0",
    "sass-lint": "^1.2.0"
  },
  "scripts": {
    "sass:dev": "node-sass --source-map src/css/hoodie.css.map -w --output-style nested src/sass/base.scss src/css/hoodie.css",
    "sass:prod": "node-sass --output-style compressed src/sass/base.scss src/css/prod/hoodie.min.css",
    "lint:dev": "sass-lint -v --config .sass-lint.yml src/sass/*",
    "autoprefix:dev": "postcss --use autoprefixer -c autoprefix_options.json -o src/css/hoodie.css src/css/hoodie.css",
    "autoprefix:prod": "postcss --use autoprefixer -c options.json -o src/css/prod/hoodie.min.css src/css/prod/hoodie.min.css",
    "open:dev": "opener http://localhost:9090",
    "serve": "http-server -p 9090 dist/",
    "live-reload": "live-reload --port 9091 dist/",
    "dev": "npm run open:dev -s && parallelshell \"npm run live-reload -s\" \"npm run sass:dev -s\" \"npm run serve -s\"",
    "prod": "npm run sass:prod  && npm run autoprefix:prod -s"
  }
}
